@model List<ResultCommentDto>

<ul class="comment-list" style="padding: 0; list-style: none;">
    @foreach (var item in Model)
    {
        <li class="comment" style="margin-bottom: 40px; display: flex; align-items: flex-start;">

            @* Fotoğraf kutusu: Yuvarlak ve hizalı *@
            <div class="vcard bio" style="min-width: 60px; width: 60px; height: 60px; margin-right: 25px;">
                <img src="https://www.w3schools.com/howto/img_avatar.png"
                     alt="Avatar"
                     style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover; border: 2px solid #dee2e6;">
            </div>

            <div class="comment-body" style="flex: 1;">
                <h3 style="font-size: 19px; margin: 0 0 5px 0; font-weight: 700; color: #343a40;">@item.Name</h3>

                @* Tarih formatını mavi ve temiz yapıyoruz *@
                <div class="meta" style="font-size: 13px; color: #2f89fc; font-weight: 600; text-transform: uppercase; margin-bottom: 12px;">
                    @item.CreateDate.ToString("dd MMMM yyyy")
                </div>

                <p style="color: #6c757d; line-height: 1.7; font-size: 16px; margin: 0;">@item.Description</p>
            </div>
        </li>
    }
</ul>