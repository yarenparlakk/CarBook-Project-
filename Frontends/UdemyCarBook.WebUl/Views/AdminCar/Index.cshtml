@model List<ResultCarWithBrandsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili ekleme, silme, güncelleme, arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka </th>
                                        <th>Model</th>
                                        <th>Vites Türü</th>
                                        <th>Km</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                        <th>Sitede Gör</th>
                                        <th>Fiyat Bilgileri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.BrandName</td>
                                                <td>@item.Model</td>
                                                <td>@item.Transmission</td>
                                                <td>@item.Km</td>
                                                @* Silme işlemi için controller adını ekledik *@
                                                <td><a asp-controller="AdminCar" asp-action="RemoveCar" asp-route-id="@item.CarID" class="btn btn-outline-danger">Sil</a></td>
                                                @* Güncelleme işlemi için controller adını ekledik *@
                                                <td><a asp-controller="AdminCar" asp-action="UpdateCar" asp-route-id="@item.CarID" class="btn btn-outline-success">Güncelle</a></td>
                                                @* Detaylar için controller adını ekledik *@
                                                <td><a asp-controller="AdminCarFeatureDetail" asp-action="Index" asp-route-id="@item.CarID" class="btn btn-outline-dark">Detaylar</a></td>
                                                @* Sitede gör için Default controller *@
                                                <td><a asp-controller="Default" asp-action="CarDetail" asp-route-id="@item.CarID" class="btn btn-outline-warning">Sitede Gör</a></td>
                                                @* Fiyat bilgileri için ilgili controller *@
                                                <td><a asp-controller="Default" asp-action="CarPrice" asp-route-id="@item.CarID" class="btn btn-outline-secondary">Fiyat Bilgileri</a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            @* Yeni araç girişi butonu için controller adını ekledik *@
                            <br />
                            <a asp-controller="AdminCar" asp-action="CreateCar" class="btn btn-outline-primary">Yeni Araç Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>