@model List<ResultCarPricingWithCarDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @* KANKA KRİTİK NOKTA: Model null ise döngüye girme diyoruz *@
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CoverImageUrl);">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="#">@item.Model</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@item.Brand</span>
                                    <p class="price ml-auto">@item.Amount <span>/Günlük</span></p>
                                </div>
                                <p class="d-flex mb-0 d-block">
                                    <a href="/Reservation/Index/@item.CarId" class="btn btn-primary py-2 mr-1">Hemen Kirala</a>
                                    <a href="/Car/CarDetail/@item.CarId" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-12 text-center">
                    <div class="alert alert-danger">
                        <h4>Veriler Yüklenemedi!</h4>
                        <p>Lütfen giriş yaptığınızdan emin olun. Eğer giriş yaptıysanız yetkiniz bu verileri görmeye yetmiyor olabilir.</p>
                        <a href="/Login/Index" class="btn btn-warning">Giriş Sayfasına Git</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

