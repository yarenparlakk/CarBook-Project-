@model List<UdemyCarBook.Dto.TagCloudDtos.GetByBlogIdTagCloudDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Etiket Bulutu Listesi</h4>
                        <p class="card-subtitle mb-4">Bloglar için tanımlanmış olan etiket listesini buradan yönetebilirsiniz.</p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Etiket Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Title</td>
                                            <td><a href="/Admin/AdminTagCloud/RemoveTagCloud/@item.TagCloudID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminTagCloud/UpdateTagCloud/@item.TagCloudID" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminTagCloud/CreateTagCloud" class="btn btn-outline-primary">Yeni Etiket Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>