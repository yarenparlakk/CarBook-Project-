@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Sosyal Medya Veri Güncelleme Alanı</h4>
						<p class="card-subtitle mb-4">
							Sosyal medya hesaplarınıza ait veri düzenlemelerini buradan yapabilirsiniz. İkonlarla ilgili listeye ikon listesi üzerinden ulaşabilirsiniz.
						</p>
						<form method="post">
							<input type="hidden" asp-for="SocailMediaID" />
							<div class="form-group">
								<label for="exampleInputName">Sosyal Medya Başlığı</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Başlığını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputUrl">Url</label>
								<input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Sosyal Medya Sayfanızın Url Linkini Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputIcon">Sosyal Medya Icon</label>
								<input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Sosyal Medya Icon Bilgisini Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Kaydet</button>
						</form>

					</div>
				</div>
			</div>
		</div>

	</div>
</div>
